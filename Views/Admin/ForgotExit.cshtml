
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>עדכון יציאה</title>
    <style>
        /* Add your custom styles here */
    </style>
</head>
<body>
    <h1>עדכון יציאה</h1>
    @if (!string.IsNullOrEmpty(@ViewBag.Message))
    {
        <div class="alert alert-success">
            @ViewBag.Message
        </div>
    }
    @using (Html.BeginForm("ForgotExit", "Admin", FormMethod.Post))
    {
        <label for="id">Worker ID:</label>
        <input type="text" id="id" name="id" required>

        <label for="exit">Exit Time:</label>
        <input type="datetime-local" id="exit" name="exit" required>

        <button type="submit">עדכן יציאה</button>
    }


    <a asp-action="Index" asp-controller="Admin">Back to Menu</a>

</body>
</html>
